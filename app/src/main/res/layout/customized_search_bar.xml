<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout_search_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/search_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp">
        <!--Here data is taken by edit text for searching data in data base-->
        <EditText
            android:id="@+id/searchBar_search_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/search_toolbar_background"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:hint="Search for Github Users "
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:scrollHorizontally="true"
            android:textSize="15dp"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/linear_layout_search_item_customized_search_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_button_search"
                android:layout_width="25dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_search_white_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="Search user here"
                android:textColor="@android:color/white" />

        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>